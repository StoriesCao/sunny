<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stories.sunny.WeatherFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/main_weather_refresher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/main_weather_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Today"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#131212"/>

                <include layout="@layout/forecast_now"/>

                <!-- ****** -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Hourly"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#131212"/>

                <include layout="@layout/hourly_forecast"/>

                <!-- ****** -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Air"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#131212"/>

                <include layout="@layout/air_quality"/>

                <!-- ****** -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Daily"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#131212"/>

                <include layout="@layout/daily_forecast"/>

                <!-- ****** -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Suggest"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#131212"/>

                <include layout="@layout/suggestions" />

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>

